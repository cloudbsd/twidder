<%= form_for([@group, Micropost.new], remote: true) do |f| %>
  <%= form_error_messages! f.object %>
  <div class="field">
    <%= f.text_area :content, :rows => 3 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
    <button class="btn btn-success" type="submit"><i class="icon-refresh icon-white"></i> Submit </button>
    <button class="btn btn-warning" type="submit"><i class="icon-refresh icon-white"></i> Submit </button>
    <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> Submit </button>
  </div>
<% end %>
