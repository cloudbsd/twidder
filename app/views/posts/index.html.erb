<h1>Listing posts</h1>

<br />

<%= form_tag posts_path, method: 'get', id: 'posts_search' do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", name: nil %>
  </p>
  <div id='posts'%> <%= render 'posts' %> </div>
<% end %>

<%= link_to 'New Post', new_post_path %>
