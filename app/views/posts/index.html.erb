<h1>Listing posts</h1>

<table class='table'>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.author_name %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to_if is_current_user?(post.user), 'Edit', edit_post_path(post) %></td>
    <td><%= link_to_if is_current_user?(post.user), 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
