<div class="span8">

<!-- project entry list -->
<table class="table table-condensed">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Size</th>
    <th>Date</th>
  </tr>

  <% if @paths %>
    <% ppaths = parent_path(@paths) %>
    <tr>
      <td></td>
      <% if ppaths %>
        <td><%= link_to_if @paths, "..", tree_project_path(@project, 'tree', ppaths), {id: 'codetree', remote: true } %></td>
      <% else %>
        <td><%= link_to_if @paths, "..", project_path(@project), {id: 'codetree', remote: true } %></td>
      <% end %>
      <td></td>
      <td></td>
    </tr>
  <% end %>

  <%= render :partial => "entry", :collection => @entries %>

</table>

</div> <!-- span8 -->

<div class="span4">
  <%= render 'sidebar' %>
</div> <!-- span4 -->
