        <li><%= link_to "Index", '#' %></li>
        <li><%= link_to "New", '#' %></li>
        <li><a href="#">Link</a></li>
      </ul>
    </div><!--/.well -->
  </div> <!-- span3 -->

  <div class="span9">

    <ul class="nav nav-pills">
      <li><%= link_to 'Most recent', projects_path %></li>
      <li class="active"><a href="#">Most watched</a></li>
      <li><a href="#">Most commented</a></li>
    </ul>
    <br />

    <div class="projects">
      <h1>Most watched projects</h1>

      <% @projects.each do |project| %>
        <div class="entry">
          <%= image_tag(project.gravatar) %>
          <h3><%= project.name %></h3>
          <p>
          <%= sanitize(project.description) %>
          </p>
          <div class="price_line">
            <span class="price"><%= project.path %></span>
          </div>
          <div class="action">
            <%= link_to 'Show', project %>
            <%= link_to 'Edit', edit_project_path(project) %>
            <%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete %>
          </div>
        </div>
      <% end %>
    </div>

    <br />

    <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
  </div> <!-- span9 -->
</div> <!-- row -->

</div>
