<div class="row">
  <div class="span3">
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li class="nav-header">Touchs</li>
        <li class="active"><a href="#">Link</a></li>
        <li><%= link_to "Index", '#' %></li>
        <li><%= link_to "Hero", '#' %></li>
        <li><%= link_to "Fluid", '#' %></li>
        <li><%= link_to "Container", '#' %></li>
        <li><%= link_to "Bootstrap", '#' %></li>
        <li class="nav-header">Projects</li>
        <li><%= link_to "Index", projects_path %></li>
        <li><%= link_to "New", new_project_path %></li>
        <li><a href="#">Link</a></li>
        <li><a href="#">Link</a></li>
        <li><a href="#">Link</a></li>
